<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>
    <!-- background color -->
    <item android:bottom="3px" android:left="3px" android:right="3px" android:top="3px">
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shape="rectangle">
            <solid android:color="#6CCBD6" />
        </shape>
    </item>
    <!-- over left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:centerColor="#00FF0000" android:centerX="0.98" android:endColor="#69000000" android:startColor="#00FF0000" />
        </shape>
    </item>
    <!-- over right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="360" android:centerColor="#00FF0000" android:centerX="0.98" android:endColor="#69000000" android:startColor="#00FF0000" />
        </shape>
    </item>
    <!-- over top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:centerColor="#00FF0000" android:centerY="0.18" android:endColor="#00FF0000" android:startColor="#69000000" android:type="linear" />
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#00FF0000" android:centerY="0.18" android:endColor="#00FF0000" android:startColor="#69000000" android:type="linear" />
        </shape>
    </item>

</layer-list>